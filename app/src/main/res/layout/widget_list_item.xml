<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_widget_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_dark"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="6dp">

    <TextView
        android:id="@+id/tv_widget_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:enabled="false"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        tools:text="Ãndices"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_widget_ride_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="IBEX 35" />

        <TextView
            android:id="@+id/tv_widget_ride_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="5"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            tools:text="89,3480 EUR" />

        <TextView
            android:id="@+id/tv_widget_percentage_up"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="+ 100,00 %"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_widget_percentage_down"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="+ 100,00 %" />

        <TextView
            android:id="@+id/tv_widget_percentage_neutral"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="+ 100,00 %" />

        <TextView
            android:id="@+id/tv_widget_percentage_no_bg"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="+ 100,00%" />

    </LinearLayout>

</LinearLayout>